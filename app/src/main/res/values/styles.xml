<resources>

    <style name="appThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/normalTextColor</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.Light.ActionBar.TabText</item>
        <!--<item name="nev"-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="appThemeWhite.withTitleBar" parent="appThemeWhite">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme" parent="appThemeWhite" />

</resources>
